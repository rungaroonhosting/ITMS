    <script>
        // CSRF Token Setup
        const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
        
        // Set CSRF token for all AJAX requests
        if (window.jQuery) {
            jQuery.ajaxSetup({
                headers: {
                    'X-CSRF-TOKEN': csrfToken
                }
            });
        }
        
        // Loading Button Helper
        function setButtonLoading(button, loading = true) {
            if (loading) {
                button.classList.add('btn-loading');
                button.disabled = true;
            } else {
                button.classList.remove('btn-loading');
                button.disabled = false;
            }
        }
        
        // Show/Hide Password Toggle
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const icon = document.querySelector(`[onclick="togglePassword('${fieldId}')"] i`);
            
            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
        
        // Theme Management
        function changeTheme(theme) {
            if (theme === 'default') {
                document.documentElement.removeAttribute('data-theme');
                localStorage.setItem('itms-theme', 'default');
            } else {
                document.documentElement.setAttribute('data-theme', theme);
                localStorage.setItem('itms-theme', theme);
            }
            
            // Show success message
            showThemeMessage('ธีมถูกเปลี่ยนเรียบร้อยแล้ว! 🎨');
        }

        // Load saved theme on page load
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = localStorage.getItem('itms-theme');
            if (savedTheme && savedTheme !== 'default') {
                document.documentElement.setAttribute('data-theme', savedTheme);
            }
        });

        // Show theme change message
        function showThemeMessage(message) {
            // Remove existing message
            const existingMessage = document.querySelector('.theme-message');
            if (existingMessage) {
                existingMessage.remove();
            }
            
            // Create new message
            const messageDiv = document.createElement('div');
            messageDiv.className = 'alert alert-success theme-message position-fixed';
            messageDiv.style.cssText = 'top: 70px; right: 20px; z-index: 9999; min-width: 250px;';
            messageDiv.innerHTML = `
                <i class="fas fa-check-circle me-2"></i>
                ${message}
            `;
            
            document.body.appendChild(messageDiv);
            
            // Auto remove after 3 seconds
            setTimeout(() => {
                messageDiv.style.transition = 'opacity 0.5s ease';
                messageDiv.style.opacity = '0';
                setTimeout(() => messageDiv.remove(), 500);
            }, 3000);
        }
        
        // Auto-hide alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert:not(.theme-message)');
            alerts.forEach(alert => {
                alert.style.transition = 'opacity 0.5s ease';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);
    </script>
    
